@model GestaoDespesas.Models.Despesa

@{
    ViewData["Title"] = "Detalhes da despesa";
}

<div class="d-flex justify-content-between align-items-start mb-4">
    <div>
        <div class="text-muted">Informação completa da despesa.</div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.DespesaId"
           class="btn btn-outline-secondary">Editar</a>

        <a asp-action="Index"
           class="btn btn-outline-secondary">Voltar</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">

        <div class="row mb-3">
            <div class="col-sm-3 text-muted">Descrição</div>
            <div class="col-sm-9 fw-semibold">@Model.Descricao</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-3 text-muted">Categoria</div>
            <div class="col-sm-9">@Model.Categoria?.Nome</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-3 text-muted">Data</div>
            <div class="col-sm-9">@Model.Data.ToString("dd/MM/yyyy")</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-3 text-muted">Valor</div>
            <div class="col-sm-9 fw-semibold">
                @Model.Valor.ToString("C")
            </div>
        </div>

@if (!string.IsNullOrWhiteSpace(Model.Observacoes))
{
            <div class="row">
                <div class="col-sm-3 text-muted">Observações</div>
                <div class="col-sm-9">@Model.Observacoes</div>
            </div>
}
