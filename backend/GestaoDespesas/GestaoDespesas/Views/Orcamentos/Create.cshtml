@model GestaoDespesas.Models.Orcamento

@{
    ViewData["Title"] = "Novo orçamento";
}

<div class="text-muted mb-4">Define um limite mensal para uma categoria.</div>

<div class="row">
    <div class="col-md-6 col-lg-5">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="CategoriaId" class="form-label">Categoria</label>
                <select asp-for="CategoriaId" class="form-select"
                        asp-items="ViewBag.CategoriaId">
                    <option value="">— Seleciona —</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mes" class="control-label"></label>
                <select asp-for="Mes" class="form-select">
                    <option value="">Selecionar mês</option>
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i">
                            @(new System.Globalization.CultureInfo("pt-PT").DateTimeFormat.GetMonthName(i))
                        </option>
                    }
                </select>
                <span asp-validation-for="Mes" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Ano" class="form-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Limite" class="form-label"></label>
                <input asp-for="Limite" class="form-control" />
                <span asp-validation-for="Limite" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>