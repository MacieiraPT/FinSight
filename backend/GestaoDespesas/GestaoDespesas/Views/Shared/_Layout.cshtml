@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@Html.AntiForgeryToken()

<!DOCTYPE html>
<html lang="pt-PT" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinSight</title>

    <!-- Bootstrap primeiro -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons depois -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Fontes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- O teu CSS sempre por último -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="app">
    <div class="app-shell">
        <!-- Sidebar -->
        <aside class="app-sidebar">
            <div class="sidebar-header">
                <a class="brand" asp-controller="Dashboard" asp-action="Index">
                    <span class="brand-mark">FS</span>
                    <span class="brand-text">FinSight</span>
                </a>

                <button class="icon-btn d-md-none" type="button" id="btnSidebarClose" aria-label="Fechar menu">
                    ✕
                </button>
            </div>

            <nav class="sidebar-nav">
                <a class="nav-item" asp-controller="Despesas" asp-action="Index">
                    <i class="bi bi-receipt nav-ico"></i> <span>Despesas</span>
                </a>
                <a class="nav-item" asp-controller="Orcamentos" asp-action="Index">
                    <i class="bi bi-bullseye nav-ico"></i> <span>Orçamentos</span>
                </a>
                <a class="nav-item" asp-controller="Categorias" asp-action="Index">
                    <i class="bi bi-tags nav-ico"></i> <span>Categorias</span>
                </a>
                <a asp-area="Identity" asp-page="/Account/Manage/FinancialSettings" class="nav-item @(Context.Request.Path.StartsWithSegments("/Identity/Account/Manage") ? "active" : "")">
                    <i class="bi bi-gear nav-ico"></i> <span>Configurações</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <div class="user-chip">
                    <div class="user-dot"></div>
                    <div class="user-meta">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <div class="user-name">@User.Identity?.Name</div>
                            <div class="user-sub">Sessão ativa</div>
                        }
                        else
                        {
                            <div class="user-name">Visitante</div>
                            <div class="user-sub">Inicia sessão</div>
                        }
                    </div>
                </div>
            </div>
        </aside>

        <!-- Main -->
        <div class="app-main">
            <!-- Topbar -->
            <header class="app-topbar">
                <div class="topbar-left">
                    <button class="icon-btn d-md-none" type="button" id="btnSidebarOpen" aria-label="Abrir menu">
                        ☰
                    </button>

                    <div class="page-title">
                        <div class="kicker">Painel</div>
                        <div class="title">@ViewData["Title"]</div>
                    </div>
                </div>

                <div class="topbar-right">
                    <button class="icon-btn" type="button" id="themeToggle" aria-label="Alternar tema">
                        🌙
                    </button>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                            <button type="submit" class="btn btn-outline-secondary btn-logout">
                                Sair
                            </button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
                    }
                </div>
            </header>

            <!-- Content -->
            <main class="app-content">
                <div class="content-card">
                    @RenderBody()
                </div>
            </main>

            <footer class="app-footer">
                <span>© @DateTime.Now.Year FinSight • .NET 8 • PostgreSQL</span>
            </footer>
        </div>
    </div>

    <!-- Toast container -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3" id="toastHost" style="z-index: 1080;"></div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @if (TempData["ToastSuccess"] != null)
    {
        <script>gdToast("@TempData["ToastSuccess"]", "success");</script>
    }
    @if (TempData["ToastWarning"] != null)
    {
        <script>gdToast("@TempData["ToastWarning"]", "warning");</script>
    }
    @if (TempData["ToastDanger"] != null)
    {
        <script>gdToast("@TempData["ToastDanger"]", "danger");</script>
    }
</body>
</html>
